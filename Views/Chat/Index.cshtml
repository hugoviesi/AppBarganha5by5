@model AppBarganhaWEB.ViewsObject.ChatVO

<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <a class="navbar-brand">
            <img src="~/img/5by5.png" alt="logo" style="width:40px;">
        </a>

        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" @Html.ActionLink("Home", "Index", "Home")</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" @Html.ActionLink("Sair", "LogOut", "Login")</a>
            </li>
        </ul>
    </nav>

    <div class="container">
        <input type="hidden" name="chatId" value="@Model.idOferta" id="chatId" />
        <input type="hidden" name="userName" value="@Model.Nome" id="userName" />
        <div class="row">&nbsp;</div>
        <div class="row">
            <div class="col-2">Mensagem</div>
            <div class="col-4"><input type="text" id="messageInput" /></div>
        </div>
        <div class="row">&nbsp;</div>
        <div class="row">
            <div class="col-6">
                <input type="button" id="sendButton" value="Enviar Mensagem" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <hr />
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <div class="container mt-3">
                <div class="media border p-4">
                    <ul id="messagesList"></ul>
                </div>
            </div>
        </div>
    </div>
    <script src="~/microsoft/signalr/dist/browser/signalr.js"></script>
    <script src="~/js/chat.js"></script>
</body>